<?xml version="1.0" encoding="UTF-8"?>
<vxml version="2.1">

  <nomatch>
    <property name="timeout" value="3s"/>
    Sorry I didn't understand
    <reprompt/>
  </nomatch>

  <noinput>
    <property name="timeout" value="3s"/>
    You didn't say anything.
    <reprompt/>
  </noinput>

  <form id="guessSong">
    <field name="guessSong">
    <prompt>
      <break/>
      Listen carefully
      <break/>
    </prompt>
    <audio src="{{song[0]}}"/>
    <prompt>
      <break/>
      What movie is the song from?
    </prompt>
    <grammar xml:lang="en-us">
      <rule id="songGrammar">
        <one-of>
          {% for x in answers %}
          <item> {{x}}
            <tag>
            {% if x == song[1] %}
            out="correct”
            {% else %}
            out = "incorrect”
            {% endif %}
            </tag>
          </item>
          {% endfor %}
          <item> i don't know </item>
        </one-of>
      </rule>
    </grammar>
    </field>
    <filled>
    <if cond="guessSong=='i don't know'">
      <prompt>ok let's try another song</prompt>
      <goto next="#song2"/>
    </if>
    </filled>
  </form>
  

</vxml>
