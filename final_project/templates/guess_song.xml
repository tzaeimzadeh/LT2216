<?xml version="1.0" encoding="UTF-8"?>
<vxml version="2.1">

  <nomatch>
    <property name="timeout" value="3s"/>
    Sorry I didn't understand
    <reprompt/>
  </nomatch>

  <noinput>
    <property name="timeout" value="3s"/>
    You didn't say anything.
    <reprompt/>
  </noinput>

  <form id="guessSong">
    <field name="guessSong">
    <prompt>
      Listen carefully
    </prompt>
    <break/>
    <audio src="{{song[0]}}"/>
    <break/>
    <prompt>
      What movie is the song from?
    </prompt>  
    <option>i don't know</option>
    {% for x in answers %}
    <item> {{x}}
      <tag>
      {% if x == song[1] %}
      out="correct”
      {% else %}
      out = "incorrect”
      {% endif %}
      </tag>
    </item>
    {% endfor %}
    </field>
    <filled>
    <if cond="guessSong=='i don't know'">
      <prompt>ok let's try another song</prompt>
      <goto next="#song2"/>
    </if>
    </filled>
  </form>
  

</vxml>
