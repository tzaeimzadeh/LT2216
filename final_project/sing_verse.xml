      <rule id="song2">
        <one-of>
            <item>even though the sound of it is something quite atrocious</item>
            <item>i don't know</item>
        </one-of>
      </rule>
    </grammar>
    <if cond="song2=='i don't know'">
      <prompt>ok let's try another song</prompt>
      <goto next="#song3"/>
