<?xml version="1.0" encoding="UTF-8"?>
<vxml version="2.1">

  <nomatch>
    <property name="timeout" value="3s"/>
    Sorry I didn't understand
    <reprompt/>
  </nomatch>

  <noinput>
    <property name="timeout" value="3s"/>
    You didn't say anything.
    <reprompt/>
  </noinput>

  <form id="singLevel">
    <block>
      <prompt>
          <break/>
          In this level, a verse from a song will play,
          and you can try to sing the next verse
          If you don't know the answer, you can say I don't know, and we'll move on
      </prompt>
      <goto next="#song1"/>
    </block>
  </form>

  <form id="song1">
    <block>
      <audio src="audio/WholeNewWorld.pcm"/>
    </block>
    <prompt>
      Sing the next verse
    </prompt>
    <grammar xml:lang="en-us">
      <rule id="song1">
        <one-of>
            <item>no one to tell us no, or where to go, or say we're only dreaming</item>
            <item>i don't know</item>
        </one-of>
      </rule>
    </grammar>
    <if cond="song1=='i don't know'">
      <prompt>ok let's try another song</prompt>
      <goto next="#song2"/>
    </if>
  </form>

  <form id="song2">
