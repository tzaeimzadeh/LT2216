      <audio src="audio/HakunaMatata.pcm"/>
    </block>
    <prompt>
      Sing the next verse
    </prompt>
    <grammar xml:lang="en-us">
      <rule id="song6">
        <one-of>
            <item>hakuna matata ain't no passing craze</item>
            <item>i don't know</item>
        </one-of>
      </rule>
    </grammar>
    <if cond="song6=='i don't know'">
      <prompt>ok maybe this game isn't for you</prompt>
      <goto next="menu"/>
    </if>
  </form>

</vxml>