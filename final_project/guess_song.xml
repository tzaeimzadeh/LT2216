<?xml version="1.0" encoding="UTF-8"?>
<vxml version="2.1">

  <nomatch>
    <property name="timeout" value="3s"/>
    Sorry I didn't understand
    <reprompt/>
  </nomatch>

  <noinput>
    <property name="timeout" value="3s"/>
    You didn't say anything.
    <reprompt/>
  </noinput>

  <form id="guessLevel">
    <block>
      <prompt>
          <break/>
          In this level, a verse from a song will play,
          and you can try to guess the title or the movie it's from.
          If you don't know the answer, you can say I don't know, and we'll move on
      </prompt>
      <goto next="#song1"/>
    </block>
  </form>

  <form id="song1">
    <block>
      <audio src="audio/UnderTheSea.pcm"/>
    </block>
    <prompt>
      Guess the song title or the movie it's from
    </prompt>
    <grammar xml:lang="en-us">
      <rule id="song1">
        <one-of>
            <item>under the sea</item>
            <item>the little mermaid</item>
            <item>i don't know</item>
        </one-of>
      </rule>
    </grammar>
    <if cond="song1=='i don't know'">
      <prompt>ok let's try another song</prompt>
      <goto next="#song2"/>
    </if>
  </form>

